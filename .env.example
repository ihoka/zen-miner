# Zen Miner Environment Variables
# Copy this file to .env.development.local for local development

# Sentry Error Tracking (optional in development, required in production)
# Get your DSN from https://sentry.io after creating a project
# Example: SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
SENTRY_DSN=

# Sentry Release Tracking (optional - auto-detected from git in development)
# In production, this should be set via Kamal deployment
# Example: SENTRY_RELEASE=abc123def456
SENTRY_RELEASE=

# Mining Configuration
# Your Monero wallet address for mining rewards
MONERO_WALLET=your-wallet-address-here

# Unique identifier for this mining worker/rig
WORKER_ID=dev-worker

# Mining pool URL (default: pool.hashvault.pro:443)
POOL_URL=pool.hashvault.pro:443

# CPU usage percentage (0-100)
CPU_MAX_THREADS_HINT=50

# Rails Configuration
# These are typically set automatically by Rails
# RAILS_ENV=development
# RAILS_LOG_LEVEL=debug
